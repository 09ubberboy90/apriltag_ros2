  <!-- Describe the tags (ID and corresponding size (side length)) -->
  <rosparam param="tag_descriptions" subst_value="true">
    [
    {id: 0, size: 0.18},
    {id: 3, size: 0.13}
    ]
  </rosparam>

</launch>
